<div class="container max-w-2xl space-y-8">
  {{#if user}}
    <form
      action="/posts"
      method="post"
      class="flex flex-col items-end space-y-2"
    >
      <div class="w-full">
        <label for="new-post-content" class="sr-only">Create Post</label>
        <input
          type="text"
          id="new-post-content"
          name="content"
          placeholder="What did you eat for lunch today?"
          maxlength="140"
          required
        />
      </div>
      <input type="hidden" name="_csrf" value="{{token}}" />
      <button type="submit" class="lg:max-w-fit button-small">Post</button>
    </form>
  {{/if}}

  <socialite-posts
    posts="{{json posts}}"
    user="{{json user}}"
  ></socialite-posts>
</div>